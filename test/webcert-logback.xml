<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="30 seconds">
  <jmxConfigurator />
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <filter class="se.inera.certificate.logging.MarkerFilter">
      <markers>Monitoring</markers>
      <onMatch>DENY</onMatch>
      <onMismatch>ACCEPT</onMismatch>
    </filter>
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="se.inera.webcert.logging.PatternLayoutWithUserContext">
        <param name="Pattern"
          value="%date{ISO8601} [%thread] %-5level %logger{10} [%user %session] - %msg%n" />
      </layout>
    </encoder>
  </appender>

  <!--Daily rolling file appender -->
  <appender name="FILE"
    class="ch.qos.logback.core.rolling.RollingFileAppender">
    <filter class="se.inera.certificate.logging.MarkerFilter">
      <markers>Monitoring</markers>
      <onMatch>DENY</onMatch>
      <onMismatch>ACCEPT</onMismatch>
    </filter>
    <file>${catalina.base}/logs/webcert.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${catalina.base}/logs/webcert.%d{yyyy-MM-dd}.log
      </fileNamePattern>
    </rollingPolicy>
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="se.inera.webcert.logging.PatternLayoutWithUserContext">
        <param name="Pattern"
          value="%date{ISO8601} [%thread] %-5level %logger{10} [%user %session] - %msg%n" />
      </layout>
    </encoder>
  </appender>

  <!--Daily rolling file appender for logging monitoring events -->
  <appender name="MONITORING"
    class="ch.qos.logback.core.rolling.RollingFileAppender">
    <filter class="se.inera.certificate.logging.MarkerFilter">
      <marker>Monitoring</marker>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>
    <file>${catalina.base}/logs/webcert-monitoring.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${catalina.base}/logs/webcert-monitoring.%d{yyyy-MM-dd}.log
      </fileNamePattern>
    </rollingPolicy>
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="se.inera.webcert.logging.PatternLayoutWithUserContext">
        <param name="Pattern" value="%date{ISO8601} %session %user %selectedCareUnit - %msg%n" />
      </layout>
    </encoder>
  </appender>

  <logger name="org.springframework" level="error" />

  <logger name="org.hibernate" level="error" />
  <logger name="org.hibernate.engine.jdbc.spi.SqlExceptionHelper" level="off" />

  <logger name="org.apache.cxf.services" level="error" />

  <!-- Info logging to enable monitoring logging -->
  <logger name="se.inera.auth" level="info" />
  <logger name="se.inera.webcert.service.fragasvar.FragaSvarServiceImpl" level="info" />
  <logger name="se.inera.webcert.service.intyg.IntygServiceImpl" level="info" />
  <logger name="se.inera.webcert.service.utkast.UtkastServiceImpl" level="info" />
  <logger name="se.inera.webcert.service.signatur.SignaturServiceImpl" level="info" />
  <logger name="se.inera.webcert.service.mail.MailNotificationServiceImpl" level="info" />
  <!-- end monitoring logging -->

  <logger name="se.inera" level="error" />

  <root>
    <level value="error" />
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
    <appender-ref ref="MONITORING" />
  </root>
</configuration>
