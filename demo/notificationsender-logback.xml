<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="30 seconds">

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{ISO8601} %-5level %logger{10} - %msg%n</pattern>
    </encoder>
  </appender>

  <!--Daily rolling file appender -->
  <appender name="FILE"
    class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${catalina.base}/logs/notification-sender.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${catalina.base}/logs/notification-sender.%d{yyyy-MM-dd}.log
      </fileNamePattern>
    </rollingPolicy>
    <encoder>
      <pattern>%date{ISO8601} %-5level %logger{10} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.springframework" level="error" />

  <logger name="org.hibernate" level="error" />

  <logger name="org.apache.cxf" level="error" />
  
  <!-- INFO level needed to log SOAP messages -->
  <logger name="org.apache.cxf.services" level="off" />

  <logger name="org.springframework" level="info" />
  
  <logger name="org.apache.camel" level="info" />

  <logger name="se.inera.webcert.notifications" level="info" />

  <root>
    <level value="error" />
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
  </root>
</configuration>
